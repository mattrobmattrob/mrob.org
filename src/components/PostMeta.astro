---
import { Calendar, Tag } from "@lucide/astro";

interface Props {
  date: Date;
  tags?: string[];
}

const { date, tags = [] } = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<div class="post-meta">
  <span class="meta-item">
    <Calendar size={14} />
    <time datetime={date.toISOString()}>{formattedDate}</time>
  </span>
  {
    tags.length > 0 && (
      <span class="tags">
        <Tag size={14} />
        {tags.map((tag) => (
          <a href={`/tags/${tag}/`} class="tag">
            {tag}
          </a>
        ))}
      </span>
    )
  }
</div>
