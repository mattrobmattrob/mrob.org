---
interface Props {
  date: Date;
  tags?: string[];
}

const { date, tags = [] } = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<div class="post-meta">
  <time datetime={date.toISOString()}>{formattedDate}</time>
  {
    tags.length > 0 && (
      <span class="tags">
        {tags.map((tag) => (
          <a href={`/tags/${tag}/`} class="tag">
            {tag}
          </a>
        ))}
      </span>
    )
  }
</div>
